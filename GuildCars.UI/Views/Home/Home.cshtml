@{
    ViewBag.Title = "Index";
}

<div class="jumbotron" style="margin:auto; text-align:center;">
    <h1 id="restName">100 Homes Restaurant</h1>

    <div class="Container">
        <div id="myNews" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#myNews" data-slide-to="0" class="active"></li>
                <li data-target="#myNews" data-slide-to="1"></li>
                <li data-target="#myNews" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner">
                <div class="item active">
                    <div class="carousel-content">
                        <p> We're opening a new location!</p>
                    </div>
                </div>
                <div class="item">
                    <div class="carousel-content">
                        <p>We're rolling out our seasonal menu, with special options for this season.</p>
                    </div>
                </div>
                <div class="item">
                    <div class="carousel-content">
                        <p>The Drink of the Month is SG Special Brew.</p>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
