@model  IEnumerable<GuildCars.Models.ViewModels.InventoryReportVM>
@{
    ViewBag.Title = "Inventory";
}

<h2>Inventory Report</h2>

<div class="container">
    <div class="row">
        <h3>New Vehicles</h3>
        <div class="col-xs-6">
            <table class="table table-striped" style="width: auto;">
                <thead>
                    <tr>
                        <th>Year</th>
                        <th>Make</th>
                        <th>Model</th>
                        <th>Count</th>
                        <th>Stock Value</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var c in Model)
                    {
                        if (c.Type == "New" || c.Type == "N")
                        {
                            <tr>
                                <td>@c.ReleaseYear</td>
                                <td>@c.CarMake.Description</td>
                                <td>@c.CarModel.Description</td>
                                <td>@c.QTY</td>
                                <td>@c.Amount.ToString("$ 0.00")</td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="row">
        <h3>Used Vehicles</h3>
        <div class="col-xs-6">
            <table class="table table-striped" style="width: auto;">
                <thead>
                    <tr>
                        <th>Year</th>
                        <th>Make</th>
                        <th>Model</th>
                        <th>Count</th>
                        <th>Stock Value</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var c in Model)
                    {
                        if (c.Type == "Used" || c.Type == "U")
                        {
                            <tr>
                                <td>@c.ReleaseYear</td>
                                <td>@c.CarMake.Description</td>
                                <td>@c.CarModel.Description</td>
                                <td>@c.QTY</td>
                                <td>@c.Amount.ToString("$ 0.00")</td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>

</div>

