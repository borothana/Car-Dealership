@model GuildCars.Models.User
@{
    ViewBag.Title = "Add";
}

<div class="row">
    <div class="col-xs-12">
        <h3>Add User</h3>
        @Html.ActionLink("Return to List", "List", "User")
    </div>
</div>
<div class="row">
    <div class="col-xs-12">
        @using (Html.BeginForm("Add", "User", FormMethod.Post))
        {
            <div class="form-group">
                @Html.HiddenFor(m => m.Id)
                <label>User Name</label>
                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", placeholder = "User Name" })
                <label>Password</label>
                @Html.TextBoxFor(m => m.PasswordHash, new { @class = "form-control", placeholder = "Password" })
                <label>Confirm Password</label>
                @Html.TextBox("txtConfirm", "", new { @class = "form-control", placeholder = "Confirm Password" })
                </div>
            <button type="submit" class="btn btn-sm btn-primary">Save</button>
            @Html.ActionLink("Cancel", "List", "User", null, new { @class = "btn btn-sm btn-info" })
        }
    </div>
</div>

