@model GuildCars.Models.ViewModels.ContactVM
@{
    ViewBag.Title = "Delete Contact";
}

<div class="row">
    <div class="col-xs-12">
        <h3>Delete Contact</h3>
        @Html.ActionLink("Return to List", "List", "Contact")
    </div>
</div>
<div class="row">
    <div class="col-xs-12">
        @using (Html.BeginForm("Delete", "Contact", FormMethod.Post))
        {
            @Html.HiddenFor(c => c.ContactId)
            <p>Are you sure that you wish to delete information from @Html.DisplayFor(c=>c.Name)?</p>
            <div class="divSave">
                <button type="submit" class="btn btn-primary">Save</button>
                @Html.ActionLink("Cancel", "List", "Contact", null, new { @class = "btn btn-info" })
            </div>
        }
    </div>
</div>     